{
  "tasks": {
    "clean": "rm -rf ./_site",
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -",
    "build": "MODE=PROD deno task lume",
    "serve": "deno task lume -s",
    "generate": "deno run -A tasks/template.ts",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check ./**/*.ts ./**/*.tsx",
    "lint": "deno lint",
    "lint:style": "deno run -A npm:stylelint@15.10.2 ./**/*.css"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "npm:preact@10.19.6"
  },
  "lint": {
    "include": [
      "./**/*.ts",
      "./**/*.tsx"
    ]
  },
  "fmt": {
    "exclude": [
      "./**/*.md"
    ]
  },
  "imports": {
    "lume/": "https://deno.land/x/lume@v2.1.2/",
    "date-fns": "npm:date-fns@3.5.0"
  },
  "lock": false
}
