{
  "name": "blog",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro build",
    "check": "npm-run-all check:*",
    "check:astro": "npm-run-all check:astro:*",
    "check:astro:astro": "astro check",
    "check:astro:prettier": "prettier --check **/*.astro",
    "check:biome": "biome ci",
    "check:markuplint": "markuplint --config markuplint.config.ts **/*.astro",
    "check:stylelint": "stylelint --config stylelint.config.ts **/*.{css,astro}",
    "clean": "rimraf dist",
    "dev": "astro dev",
    "fmt": "npm-run-all fmt:*",
    "fmt:astro": "prettier --write **/*.astro",
    "fmt:biome": "npm-run-all fmt:biome:*",
    "fmt:biome:check": "biome check --write",
    "fmt:biome:format": "biome format --write",
    "fmt:package": "sort-package-json",
    "fmt:style": "stylelint --config stylelint.config.ts --fix **/*.{css,astro}",
    "preview": "astro preview",
    "start": "astro dev",
    "test": "vitest run"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.5",
    "@astrojs/mdx": "4.3.9",
    "@astrojs/rss": "4.0.13",
    "@astrojs/sitemap": "3.6.0",
    "@biomejs/biome": "2.3.1",
    "@markuplint/astro-parser": "4.6.21",
    "@markuplint/ml-config": "4.8.13",
    "@microsoft/eslint-formatter-sarif": "3.1.0",
    "@types/sanitize-html": "2.16.0",
    "astro": "5.15.2",
    "browserslist": "4.27.0",
    "budoux": "0.7.0",
    "lightningcss": "1.30.2",
    "markuplint": "4.13.1",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "rimraf": "6.0.1",
    "sanitize-html": "2.17.0",
    "sort-package-json": "3.4.0",
    "stylelint": "16.25.0",
    "stylelint-config-astro": "1.0.4",
    "stylelint-config-recess-order": "7.4.0",
    "stylelint-config-standard": "38.0.0",
    "stylelint-order": "7.0.0",
    "textlint": "15.2.3",
    "textlint-rule-no-dead-link": "6.0.1",
    "typescript": "5.9.3",
    "ufo": "1.6.1",
    "vitest": "4.0.4"
  },
  "packageManager": "pnpm@10.20.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "sharp"
    ],
    "executionEnv": {
      "nodeVersion": "22.21.0"
    }
  }
}
