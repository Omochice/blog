{
  "name": "blog",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro build",
    "check": "npm-run-all check:*",
    "check:astro": "npm-run-all check:astro:*",
    "check:astro:astro": "astro check",
    "check:biome": "biome ci",
    "check:markuplint": "markuplint --config markuplint.config.ts **/*.astro",
    "check:stylelint": "stylelint --config stylelint.config.ts **/*.{css,astro}",
    "clean": "rimraf dist",
    "dev": "astro dev",
    "fmt": "npm-run-all fmt:*",
    "fmt:biome": "npm-run-all fmt:biome:*",
    "fmt:biome:check": "biome check --write",
    "fmt:biome:format": "biome format --write",
    "fmt:package": "sort-package-json",
    "fmt:style": "stylelint --config stylelint.config.ts --fix **/*.{css,astro}",
    "preview": "astro preview",
    "start": "astro dev",
    "test": "vitest run"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.6",
    "@astrojs/mdx": "4.3.13",
    "@astrojs/rss": "4.0.15",
    "@astrojs/sitemap": "3.7.0",
    "@biomejs/biome": "2.3.10",
    "@markuplint/astro-parser": "4.6.22",
    "@markuplint/ml-config": "4.8.14",
    "@microsoft/eslint-formatter-sarif": "3.1.0",
    "@types/sanitize-html": "2.16.0",
    "astro": "5.16.11",
    "browserslist": "4.28.1",
    "budoux": "0.7.0",
    "lightningcss": "1.31.1",
    "markuplint": "4.14.0",
    "npm-run-all2": "8.0.4",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "rimraf": "6.1.2",
    "sanitize-html": "2.17.0",
    "sort-package-json": "3.6.0",
    "stylelint": "17.0.0",
    "stylelint-config-astro": "2.0.0",
    "stylelint-config-recess-order": "7.6.0",
    "stylelint-config-standard": "40.0.0",
    "stylelint-order": "7.0.1",
    "textlint": "15.5.1",
    "textlint-rule-no-dead-link": "6.2.0",
    "typescript": "5.9.3",
    "ufo": "1.6.3",
    "vitest": "4.0.17"
  },
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "sharp"
    ],
    "executionEnv": {
      "nodeVersion": "24.13.0"
    }
  }
}
